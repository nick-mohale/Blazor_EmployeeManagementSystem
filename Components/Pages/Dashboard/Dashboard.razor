@page "/"
@page "/dashboard"

@inject EmployeeService EmployeeService
@inject DepartmentService DepartmentService

<h3>Dashboard</h3>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card m-3 bg-danger" style="box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <h3 class="mb-4 text-white">Total Employees</h3>
                    <div class="avatar avatar-primary" style="width: 80px; height: 80px;">
                        <i class="bi bi-person" style="font-size: 2rem;"></i>
                    </div>
                    <h1 class="mt-4">@TotalEmployees</h1>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-6">
            <div class="card m-3 bg-warning" style="box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <h3 class="mb-4 text-white">Total Departments</h3>
                    <div class="avatar avatar-secondary" style="width: 80px; height: 80px;">
                        <i class="bi bi-building" style="font-size: 2rem;"></i>
                    </div>
                    <h1 class="mt-4">@TotalDepartments</h1>
                </div>
            </div>
        </div>
    </div>
</div>


@code {

    [Parameter]
    public int TotalEmployees { get; set; }

    [Parameter]
    public int TotalDepartments { get; set; }

    protected override void OnInitialized()
    {
        LoadData();
        //Charts();

    }

    private void LoadData()
    {
        try
        {
            TotalEmployees = EmployeeService.GetEmployees().Count;
            TotalDepartments = DepartmentService.GetDepartments().Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void Charts()
    {
        
    }

}
